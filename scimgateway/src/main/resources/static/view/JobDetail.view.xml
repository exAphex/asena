<?xml version="1.0" encoding="UTF-8"?>
<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.uxap" xmlns:f="sap.ui.layout.form" xmlns:m="sap.m" xmlns:tnt="sap.tnt" xmlns:l="sap.ui.layout" xmlns:t="sap.ui.table" controllerName="com.asena.ui5.controller.views.JobDetail">
	<m:Page showHeader="false">
		<m:content>
			<ObjectPageLayout useIconTabBar="true" upperCaseAnchorBar="false">
				<headerTitle>
					<ObjectPageHeader objectTitle="{/name}" objectSubtitle="{/description}" />
				</headerTitle>
				<sections>
					<ObjectPageSection titleUppercase="false" title="{i18n>JobDetail.titJob}">
						<subSections>
							<ObjectPageSubSection>
								<blocks>
									<l:VerticalLayout class="sapUiContentPadding" width="100%">
										<f:SimpleForm class="editableForm sapUiCozy" columnsL="2" columnsM="1" editable="true" emptySpanL="0" emptySpanM="0" labelSpanL="3" labelSpanM="3" layout="ResponsiveGridLayout">
											<f:content>
												<m:Label text="{i18n>JobDetail.lblEnabled}" />
												<m:Switch type="AcceptReject" state="{/enabled}" />
											</f:content>
										</f:SimpleForm>
									</l:VerticalLayout>
								</blocks>
							</ObjectPageSubSection>
						</subSections>
					</ObjectPageSection>
					<ObjectPageSection titleUppercase="false" title="{i18n>JobDetail.titPasses}">
						<subSections>
							<ObjectPageSubSection titleUppercase="false">
								<blocks>
									<t:Table id="tblSteps" rows="{/properties/}" selectionBehavior="Row" selectionMode="Single" visibleRowCount="10" rowActionCount="2" ariaLabelledBy="title">
										<t:rowActionTemplate>
											<t:RowAction>
												<t:items>
													<t:RowActionItem visible="true" tooltip="{i18n>JobDetail.ttEditPass}" icon="sap-icon://edit" press="_onConnectionPropertyEdit" />
													<t:RowActionItem visible="true" tooltip="{i18n>JobDetail.ttDeletePass}" icon="sap-icon://delete" press="_onConnectionPropertyDelete" />
												</t:items>
											</t:RowAction>
										</t:rowActionTemplate>
										<t:toolbar>
											<m:Toolbar>
												<m:ToolbarSpacer />
												<m:Button icon="sap-icon://add" tooltip="{i18n>JobDetail.ttAddPass}" press="_onAddConnectionProperty" />
												<m:Button icon="sap-icon://refresh" tooltip="{i18n>JobDetail.ttRefresh}" press="_onAddConnectionProperty" />
											</m:Toolbar>
										</t:toolbar>
										<t:columns>
											<t:Column sortProperty="description" width="auto">
												<m:Label text="{i18n>JobDetail.colType}" />
												<t:template>
													<m:Text text="{description}" wrapping="false" />
												</t:template>
											</t:Column>
											<t:Column sortProperty="key" width="auto">
												<m:Label text="{i18n>JobDetail.colName}" />
												<t:template>
													<m:Text text="{key}" wrapping="false" />
												</t:template>
											</t:Column>
											<t:Column sortProperty="value" width="auto">
												<m:Label text="{i18n>JobDetail.colDescription}" />
												<t:template>
													<m:Text text="{value}" wrapping="false" />
												</t:template>
											</t:Column>
											<t:Column sortProperty="description" width="auto">
												<m:Label text="{i18n>JobDetail.colRepository}" />
												<t:template>
													<m:Text text="{description}" wrapping="false" />
												</t:template>
											</t:Column>

										</t:columns>
									</t:Table>
								</blocks>
							</ObjectPageSubSection>
						</subSections>
					</ObjectPageSection>
				</sections>
			</ObjectPageLayout>
		</m:content>
	</m:Page>
</mvc:View>